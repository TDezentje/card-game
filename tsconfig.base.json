{
    "compileOnSave": false,
    "compilerOptions": {
        "esModuleInterop": true,
        "baseUrl": "./",
        "sourceMap": false,
        "declaration": false,
        "module": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES5",
        "jsx": "react",
        "jsxFactory": "h",
        "noImplicitAny": false,
        "importHelpers": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types",
        ],
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ]
    }
}